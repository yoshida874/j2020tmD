<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  {literal}
  <script type="text/javascript">

  function del_func_form(pm,mess){
      console.log("del_func");
      var message = "本当に\r\n";
      message += mess;
      message += "\r\nを削除しますか？";
      console.log(message);
      if(confirm(message)){
          document.form1.target = "_self";
          document.form1.func.value = 'del';
          document.form1.param.value = pm;
          document.form1.submit();
      }else {
        console.log('キャンセルがクリックされました');
      }
  }
  </script>
  {/literal}
</head>

<body>
  {include file="../components/header.tmpl"}
  <div>
    <h1>団体</h1>
    <div align="center">
    {$ERR_STR}
    <form name="form1" action="{$tgt_uri}" method="post" >
      <table border="1">
        <tr>
          <td>ID</td>
          <td>グループ名</td>
          <td>操作</td>
        </tr>

        <!-- sample1-->
        {foreach from=$rows key=k item=value}
        <tr>
          <td>
            {$value.NPO_id}
          </td>
          <td>
            {$value.group_name}
          </td>
          <td>
            <a href='./Dantai_Edit.php?id={$value.NPO_id}'>
              <button type="button">詳細</button>
            </a>
            <button onclick="javascript:del_func_form({$value.NPO_id},'【ID : {$value.NPO_id} NAME : {$value.group_name}】')" >削除</button>
          </td>
        </tr>
        {foreachelse}
        <tr>
        <td colspan="3" class="nobottom">メンバーが見つかりません</td>
        </tr>
        {/foreach}
      </table>
      <input type="hidden" name="func" value="" />
      <input type="hidden" name="param" value="" />
    </form>
    </div>
  </div>
  {include file="../components/footer.tmpl"}
</body>

</html>
