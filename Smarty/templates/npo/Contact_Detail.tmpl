<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  {literal}

  <script type="text/javascript">
  <!--
  function set_func_form(fn,pm){
      document.form1.target = "_self";
      document.form1.func.value = fn;
      document.form1.param.value = pm;
      document.form1.submit();
  }
  // -->
  </script>
  {/literal}
</head>

<body>
  {include file="../components/header.tmpl"}
  <div align="center">
    <section id="detail">
      <h2>お問い合わせ詳細</h2>
      {$err_flag}
      <table border="1">
        <tr>
          <td>ID</td>
          <td>{$inquiry_id}</td>
        </tr>
        <tr>
          <td>状態</td>
          <td>未返信</td>
        </tr>
        <tr>
          <td>ユーザ名</td>
          <td>{$smarty.post.user_name}</td>
        </tr>
        <tr>
          <td>ユーザID</td>
          <td>{$smarty.post.user_id}</td>
        </tr>
        <tr>
          <td>お問い合わせ内容</td>
          <td>{$smarty.post.content}</td>
        </tr>
        <tr>
          <td>受信日時</td>
          <td>{$smarty.post.target_date}</td>
        </tr>
      </table>
      <button onclick="location.href='./Contact_List.php'">戻る</button>
      <button onmousedown="Reply()">返信</button>
      <script>
        function Reply() {
          document.getElementById("detail").hidden = true;
          document.getElementById("reply").hidden = false;
        }
      </script>
    </section>
    <section id="reply" hidden>
      <form name="form1" action="{$smarty.server.PHP_SELF}" method="post" >
        <h2>返信内容</h2>
        <p>
          <textarea name="" id="" cols="40" rows="10"> </textarea>
        </p>
        <input type="hidden"   name="inquiry_id" value="{$smarty.post.inquiry_id|escape}">
        <input type="hidden"   name="user_name" value="{$smarty.post.user_name|escape}">
        <input type="hidden"   name="user_id" value="{$smarty.post.user_id|escape}">
        <input type="hidden"   name="content" value="{$smarty.post.content|escape}">
        <input type="hidden"   name="target_date" value="{$smarty.post.target_date|escape}">
        <input type="hidden" name="func" value="conf" />
        <input type="hidden" name="param" value="" />
        <button>戻る</button>
        <input type="button"  value="送る" onClick="javascript:set_func_form('set','')"/>
      </form>
    </section>
  </div>
  {include file="../components/footer.tmpl"}
</body>

</html>