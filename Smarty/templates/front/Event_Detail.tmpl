<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
</head>

<body>
  {include file="../components/header.tmpl"}
  <div>
    <div>
      <table>
        <tr>
          <td>
            <table>
              <tr>
                <td>{$rows.start_event_date}</td>
              </tr>
              <tr>
                <td>({$rows.start_event_week})</td>
              </tr>
            </table>
          </td>
          <td>{$rows.event_name}</td>
        </tr>
      </table>
      <table>
        <tr>
          <td>
            <img class="fit-picture" src="{$value.img}" alt="Event image" />
          </td>
        </tr>
        <tr>
          <td>
            <textarea name="" id="" cols="80" rows="10" readonly>
              {$rows.content}
            </textarea>
          </td>
        </tr>
        <tr>
          <td>
            <button>お問い合わせ</button>
          </td>
        </tr>
      </table>
    </div>

    <div>
      <!-- 開催団体 -->
      <div style="border: 2px solid #000000; width: 300px; height: 155px;">
        <table>
          <tr>
            <td>開催団体</td>
          </tr>
          <tr>
            <td><button>Wiz保育部</button></td>
          </tr>
          <table>
            <tr>
              <td>
                <img class="fit-picture" src="img path" alt="Event image" />
              </td>
              <td>
                <table>
                  <tr>
                    <td>イベント数　３回</td>
                  </tr>
                  <tr>
                    <td>メンバー数　40人</td>
                  </tr>
                </table>
              </td>
            </tr>
            <tr>
            </td>
              <td><button>フォロー</button></td>
            </tr>
          </table>
        </table>
      </div>

      <p></p>

      <!-- イベント詳細 -->
      <div style="border: 2px solid #000000; width: 300px; height: 180px;">
        <table>
          <tr>
            <td>開催日時</td>
          </tr>
          <tr>
            <td>{$rows.start_event_date}</td>
          </tr>
          <tr>
            <td>{$rows.start_event_time} ~ {$rows.start_event_time}</td>
          </tr>
          <table>
            <tr>
              <td>対象年齢 {$rows.start_age}〜{$rows.end_age}歳</td>
            </tr>
            <tr>
              <td>参加費用 {$rows.cost}円</td>
            </tr>
          </table>
          <tr>
            <td></td>
            <td><button>イベントに申し込む</button></td>
          </tr>
        </table>
      </div>

      <p></p>

      <!-- 開催場所 -->
      <div style="border: 2px solid #000000; width: 300px; height: 115px;">
        <table>
          <tr>
            <td>開催場所</td>
          </tr>
          <tr>
            <td>会場名</td>
            <td>{$rows.venue_name}</td>
          </tr>
          <tr>
            <td>住所</td>
            <td>{$rows.venue_city}{$rows.venue_aza}</td>
          </tr>
        </table>
      </div>

      <p></p>

      <!-- 管理者 -->
      <div style="border: 2px solid #000000; width: 300px; height: 35px;">
        <table>
          <tr>
            <td>管理者</td>
            <td>{$rows.representative}</td>
          </tr>
        </table>
      </div>

      <p></p>

      <!--  参加者-->
      <div style="border: 2px solid #000000; width: 300px; height: 115px;">
        <table>
          <tr>
            <td>参加者</td>
            <td>9人</td>
          </tr>
          <tr>
            <td>渡辺 花子</td>
            <td>＠watanabe_watanabe</td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  {include file="../components/footer.tmpl"}
</body>

</html>